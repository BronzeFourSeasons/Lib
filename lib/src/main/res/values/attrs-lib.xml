<?xml version="1.0" encoding="utf-8"?>
<resources>
     <!--小标题栏-->
    <declare-styleable name="MinTitleView">
        <attr name="android:text" />
        <!--返回键显示内容-->
        <attr name="textBack" format="string" />
        <!--该内容颜色-->
        <attr name="color" format="color" />
        <!--判断是图片还是文字-->
        <attr name="isMoreDisplay" format="integer">
            <enum name="display_image" value="-1" />
            <enum name="display_text" value="-2" />
            <enum name="display_no" value="-3" />
        </attr>
        <!--显示内容-->
        <attr name="textMore" format="string" />
        <!--该内容颜色-->
        <attr name="moreImage" format="reference|color" />
    </declare-styleable>
    
    <!--垂直滑轮控件-->
    <declare-styleable name="WheelView">
        <!--单元格高度-->
        <attr name="unitHeight" format="dimension" />
        <!--显示多少个内容-->
        <attr name="itemNumber" format="integer" />
        <!--未选中文本的颜色-->
        <attr name="normalTextColor" format="color" />
        <!--未选中文本的大小-->
        <attr name="normalTextSize" format="dimension" />
        <!--选中文本的颜色-->
        <attr name="selectedTextColor" format="color" />
        <!--选中文本的大小-->
        <attr name="selectedTextSize" format="dimension" />
        <!--线的颜色-->
        <attr name="lineColor" format="color" />
        <!--线的宽度-->
        <attr name="lineHeight" format="dimension" />
        <!--蒙板高度-->
        <attr name="maskHeight" format="dimension" />
        <!--是否允许选空-->
        <attr name="noEmpty" format="boolean" />
        <!--是否可用-->
        <attr name="isEnable" format="boolean" />
    </declare-styleable>
    <!--小船波浪控件-->
    <declare-styleable name="WaveView">
        <!--中间小船的图片-->
        <attr name="imageBitmap" format="reference" />
        <!--水位是否要上升-->
        <attr name="rise" format="boolean" />
        <!--水波纹向右移动的时候执行的时间-->
        <attr name="duration" format="integer" />
        <!--起始点的Y坐标-->
        <attr name="originY" format="dimension" />
        <!--水波纹的高度-->
        <attr name="waveHeight" format="integer"/>
        <!--水波纹的长度-->
        <attr name="waveLength" format="integer"/>
        <!--水波纹的长度-->
        <attr name="waveColor" format="color"/>
    </declare-styleable>
    
</resources>
