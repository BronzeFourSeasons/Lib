<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hai_image"
        android:layout_width="@dimen/height_item"
        android:layout_height="@dimen/height_item"
        android:layout_margin="@dimen/margin_default"
        android:contentDescription="@string/todo"
        android:src="@mipmap/default_head_image" />

    <TextView
        android:id="@+id/hai_title"
        style="@style/text_max"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menu"
        android:layout_marginLeft="@dimen/height_title"
        android:layout_marginStart="@dimen/height_title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_default"
        android:paddingRight="@dimen/margin_default"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/hai_content"
        style="@style/text_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menu"
        android:layout_marginLeft="@dimen/height_title"
        android:layout_marginStart="@dimen/height_title"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_default"
        android:paddingRight="@dimen/margin_default"
        android:text="@string/app_name"
        android:textColor="@color/gray" />

    <ImageView
        android:layout_width="@dimen/margin_item"
        android:layout_height="@dimen/height_item"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_default"
        android:contentDescription="@string/todo"
        android:padding="@dimen/margin"
        android:src="@mipmap/ic_right" />

</RelativeLayout>
